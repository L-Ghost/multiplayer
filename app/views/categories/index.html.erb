<h2>Multiplayer - Categorias</h2>

<div>
  <% if @categories.any? %>
    <ul>
      <% @categories.each do |category| %>
        <li><%= link_to category.name, category %></li>
      <% end %>
    </ul>
  <% end %>

  <p><%= "#{t('total.categories')}: #{@categories.count}" %></p>
</div>

<%= link_to t(:back), root_path %>