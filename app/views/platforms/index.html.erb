<h2>Multiplayer - Consoles</h2>
<div>
  <% if @platforms.any? %>
    <ul>
      <% @platforms.each do |platform| %>
        <li><%= link_to platform.name, platform %></li>
      <% end %>
    </ul>
  <% end %>

  <p><%= "#{t('total.platforms')}: #{@platforms.count}" %></p>
</div>

<%= link_to t(:back), root_path %>
