
<%= simple_form_for @event do |f| %>
  <%= f.input :title %>
  <%= f.input :game_release_id, collection: @game_releases, label_method: :game_and_platform, value_method: :id, label: t('form.new.event.game_release_id') %>
  <%= f.input :description, as: :text %>
  <%= f.input :event_date %>
  <%= f.input :user_limit %>

  <% Event.event_types.each do |k, v| %>
    <%= f.label :"event_type_#{k}" ,t("form.new.event.#{k}") %>
    <%= f.radio_button(:event_type, k.to_s) %>
  <% end %>

  <%= f.input :event_location %>
  <%= f.submit t('form.new.event.submit'), class: 'btn btn-primary' %>
<% end %>
