<div class="mt-3">
  <h3><%= t('last.games') %></h3>

  <% if games.any? %>
    <div class="row">
      <% games.each do |game| %>
        <div class="card ml-3 mt-3" style="width: 20rem;">
          <% if game.photo.attached? %>
            <div class="card-img">
              <%= image_tag game.photo.variant(resize: '200x'), class: '' %>
            </div>
          <% end %>

          <div class="card-body">
          </div>
          
          <div class="card-footer">
            <h5><%= link_to game.name %></h5>

            <% if !current_user.games.exists?(game.id) %>
              <%= game.add_to_profile %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>