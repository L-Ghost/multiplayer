<div class="text-center">
  <h2><%= t('shared.links.login') %></h2>

  <%= simple_form_for resource, as: resource_name, url: session_path(resource_name),
    html: { class: 'col-md-6 form-signin' } do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
        required: false,
        autofocus: true,
        input_html: { autocomplete: "email" } %>
      <%= f.input :password,
        required: false,
        input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t('shared.links.login'), class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
