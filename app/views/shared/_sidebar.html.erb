<div class="bg-dark" id="sidebar-wrapper">
  <div class="sidebar-heading"></div>
  <div class="list-group list-group-flush">
    <% if admin_signed_in? %>
      <%= link_to t('register.category'), new_category_path, class: 'list-group-item list-group-item-action bg-dark text-white' %>
      <%= link_to t('register.company'), new_company_path, class: 'list-group-item list-group-item-action bg-dark text-white' %>
      <%= link_to t('register.game'), new_game_path, class: 'list-group-item list-group-item-action bg-dark text-white' %>
      <%= link_to t('register.platform'), new_platform_path, class: 'list-group-item list-group-item-action bg-dark text-white' %>
    <% end %>
    <%= link_to t('view.categories'), categories_path, class: 'list-group-item list-group-item-action bg-dark text-white' %>
    <%= link_to t('view.platforms'), platforms_path, class: 'list-group-item list-group-item-action bg-dark text-white' %>
    <% if user_signed_in? %>
      <%= link_to t('create.event'), new_event_path, class: 'list-group-item list-group-item-action bg-dark text-white' %>
    <% end %>
  </div>
</div>
